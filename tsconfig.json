{
    "include": [
      "src", "**/*.ts", "**/*.js"
    ],
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "downlevelIteration": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types",
        "node_modules/@types/node"
      ],
    }
  }