{
    "include": [
      "src", "**/*.ts", "**/*.js"
    ],
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "downlevelIteration": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "allowJs": true,
      "typeRoots": [
        "node_modules/@types",
        "node_modules/@types/node"
      ],
      
      // Required as part of typescript-ioc: https://www.npmjs.com/package/typescript-ioc
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    }
  }